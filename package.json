{
  "name": "yllet",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@yllet/babel-preset-main": "^1.0.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.23.0",
    "expect": "21.2.1",
    "husky": "^4.2.5",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^26.6.3",
    "jest-mock": "26.6.2",
    "karma": "^4.4.1",
    "karma-browserstack-launcher": "1.6.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "4.0.2",
    "lerna": "^4.0.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "semistandard": "^16.0.0",
    "webpack": "4.46.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build",
    "start": "lerna run start",
    "test": "yarn build && yarn test:coverage && yarn test:browsers",
    "test:unit": "jest --config testing/jest.config.js packages/**",
    "test:coverage": "yarn test:unit --coverage",
    "test:browsers": "NODE_ENV=test karma start testing/karma.conf.js",
    "postinstall": "lerna bootstrap",
    "lint": "semistandard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "examples/*/**.js",
      "packages/*/__tests__/**.js",
      "packages/*/__tests__/Transport/**.js"
    ],
    "globals": [
      "Headers",
      "fetch"
    ]
  }
}
