{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2016",
    "lib": ["ES6"],
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Additional Checks */
    "noUnusedLocals": true
  }
}
